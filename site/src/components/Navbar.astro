---
const links = [
  {name: "Home", href: ""},
  {name: "Broadcast", href: "broadcast"},
  {name: "Reaper", href: "reaper"},
  {name: "Managers", href: "manager"},
]
---

<nav class="flex flex-row justify-start md:justify-between w-full content-center p-4 text-base mb-5">
  <div class="font-mono text-pnk hidden md:flex md:items-center">
    <a href="/">
      puremoot.go
    </a>
  </div>
  <div class="font-bold">
    {
      links.map(
        (link) =>
          <span class={
            "m-2 group transition-all"
          }>
            <a href={"/" + link.href} class="inline-block justify-center">
              {link.name}
              <span class="block max-w-0 group-focus:max-w-full group-hover:max-w-full transition-all duration-300 h-0.5 bg-pink-600"></span>
            </a>
          </span>
      )
    }

    <span class={
      "m-2 group transition-all"
    }>
      <a href="https://github.com/junikimm717/puremoot" class="inline-block" target="_blank">
        GitHub
        <span class="block max-w-0 group-hover:max-w-full transition-all duration-300 h-0.5 bg-pink-600"></span>
      </a>
    </span>
  </div>
</nav>
